<h1>New Book</h2>
<%= form_for @book, url: books_path do |f| %>
  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
  <div>
    <%= f.label :author_tokens, "Authors" %><br>
    <%= f.text_field :author_tokens, data: {load: @book.authors} %>
  </div>
  <br>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<%= link_to 'Back', books_path %>